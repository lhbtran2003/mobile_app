<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="#FFF8E1"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header cute với icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/cute_header_bg"
            android:padding="16dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📚"
                android:textSize="32sp"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thư Viện Sách Cute"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#FF6B9D"
                android:fontFamily="sans-serif-condensed" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🌸"
                android:textSize="32sp"
                android:layout_marginStart="12dp" />

        </LinearLayout>

        <!-- Form nhập liệu trong card cute -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Tiêu đề form -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="✨"
                        android:textSize="20sp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thêm sách mới"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#4A90E2" />

                </LinearLayout>

                <!-- Input fields với style cute -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:boxCornerRadiusTopStart="15dp"
                    app:boxCornerRadiusTopEnd="15dp"
                    app:boxCornerRadiusBottomStart="15dp"
                    app:boxCornerRadiusBottomEnd="15dp"
                    app:boxBackgroundColor="#F8F9FA"
                    app:hintTextColor="#FF6B9D"
                    app:boxStrokeColor="#FFB6C1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtTenSach"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="📖 Tên sách"
                        android:textColor="#333333"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:boxCornerRadiusTopStart="15dp"
                    app:boxCornerRadiusTopEnd="15dp"
                    app:boxCornerRadiusBottomStart="15dp"
                    app:boxCornerRadiusBottomEnd="15dp"
                    app:boxBackgroundColor="#F8F9FA"
                    app:hintTextColor="#FF6B9D"
                    app:boxStrokeColor="#FFB6C1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtTacGia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="✍️ Tác giả"
                        android:textColor="#333333"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:boxCornerRadiusTopStart="15dp"
                    app:boxCornerRadiusTopEnd="15dp"
                    app:boxCornerRadiusBottomStart="15dp"
                    app:boxCornerRadiusBottomEnd="15dp"
                    app:boxBackgroundColor="#F8F9FA"
                    app:hintTextColor="#FF6B9D"
                    app:boxStrokeColor="#FFB6C1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtNamXuatBan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="📅 Năm xuất bản"
                        android:inputType="number"
                        android:textColor="#333333"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Spinner với label cute -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🏷️ Phân loại:"
                    android:textSize="16sp"
                    android:textColor="#4A90E2"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/spinnerPhanLoai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:minHeight="48dp"
                    android:padding="12dp"
                    android:background="@drawable/cute_spinner_bg" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Nút chức năng cute -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="25dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#4CAF50">

                <Button
                    android:id="@+id/btnThem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="➕ Thêm sách"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:background="@android:color/transparent"
                    android:padding="12dp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                app:cardCornerRadius="25dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#FF9800">

                <Button
                    android:id="@+id/btnThongKe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📊 Thống kê"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:background="@android:color/transparent"
                    android:padding="12dp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="25dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#2196F3">

                <Button
                    android:id="@+id/btnTimKiem2023"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🔍 Sách 2023"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:background="@android:color/transparent"
                    android:padding="12dp" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Bảng dữ liệu trong card cute -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Tiêu đề bảng -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📋"
                        android:textSize="20sp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Danh sách sách"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#4A90E2" />

                </LinearLayout>

                <!-- Bảng hiển thị dữ liệu -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Header của bảng với style cute -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="#FFFF6B9D"
                            android:padding="2dp">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="🔢 Mã sách"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                android:padding="8dp"
                                android:textSize="12sp"
                                android:gravity="center"
                                android:background="#80FFFFFF"
                                android:layout_margin="1dp" />

                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:text="📚 Tên sách"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                android:padding="8dp"
                                android:textSize="12sp"
                                android:gravity="center"
                                android:background="#80FFFFFF"
                                android:layout_margin="1dp" />

                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:text="👤 Tác giả"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                android:padding="8dp"
                                android:textSize="12sp"
                                android:gravity="center"
                                android:background="#80FFFFFF"
                                android:layout_margin="1dp" />

                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:text="📅 Năm XB"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                android:padding="8dp"
                                android:textSize="12sp"
                                android:gravity="center"
                                android:background="#80FFFFFF"
                                android:layout_margin="1dp" />

                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:text="🏷️ Phân loại"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                android:padding="8dp"
                                android:textSize="12sp"
                                android:gravity="center"
                                android:background="#80FFFFFF"
                                android:layout_margin="1dp" />

                        </LinearLayout>

                        <!-- Container cho các row dữ liệu -->
                        <TableLayout
                            android:id="@+id/tableLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:stretchColumns="*"
                            android:shrinkColumns="*">

                            <!-- Các row dữ liệu sẽ được thêm vào đây bằng code -->

                        </TableLayout>

                    </LinearLayout>

                </HorizontalScrollView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>